{{#each this}}
<div class="country-description">
    <h2>{{name}}</h2>
    <p>Capital: {{capital}}</p>
    <p>Population: {{population}}</p>
    <p>Languages: </p>
    <ul>{{#each languages}}<li>{{name}}</li>{{/each}}</ul>
</div>
<div class="country-flag">
    <img width="500" src="{{flag}}" alt="flag of {{name}}">
</div>
{{/each}}